---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
        xsi:schemaLocation="http://www.sitemaps.org/schemas/sitemap/0.9 http://www.sitemaps.org/schemas/sitemap/0.9/sitemap.xsd"
        xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
        xmlns:image="http://www.google.com/schemas/sitemap-image/1.1"
        xmlns:video="http://www.google.com/schemas/sitemap-video/1.1">
  {% for page in site.pages %}
    {% if page.url contains '.xml' or page.url contains 'assets' or page.url contains '.json' or page.url contains '.css' or page.noindex %}
    {% else %}
      <url>
        <loc>{{ page.url | absolute_url }}</loc>
        <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
        <changefreq>monthly</changefreq>
        <priority>1.0</priority>
        {% if page.jpg %}
          <image:image>
            <image:loc>{{ page.jpg | absolute_url }}</image:loc>
            <image:title>{{ page.title }}</image:title>
            <image:caption>{{ page.alt }}</image:caption>
          </image:image>
        {% endif %}
        {% if page.webp %}
          <image:image>
            <image:loc>{{ page.webp | absolute_url }}</image:loc>
            <image:title>{{ page.title }}</image:title>
            <image:caption>{{ page.alt }}</image:caption>
          </image:image>
        {% endif %}
      </url>
    {% endif %}
  {% endfor %}

  {% for page in site.ciudades %}
      <url>
        <loc>{{ page.url | absolute_url }}</loc>
        <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
        <changefreq>monthly</changefreq>
        <priority>1.0</priority>
        {% if page.jpg %}
          <image:image>
            <image:loc>{{ page.jpg | absolute_url }}</image:loc>
            <image:title>{{ page.title }}</image:title>
            <image:caption>{{ page.alt }}</image:caption>
          </image:image>
        {% endif %}
        {% if page.webp %}
          <image:image>
            <image:loc>{{ page.webp | absolute_url }}</image:loc>
            <image:title>{{ page.title }}</image:title>
            <image:caption>{{ page.alt }}</image:caption>
          </image:image>
        {% endif %}
      </url>
  {% endfor %}
  
  {% for post in site.posts %}
    <url>
      <loc>{{ post.url | absolute_url }}</loc>
      <lastmod>{{ post.date | date_to_xmlschema }}</lastmod>
      <changefreq>monthly</changefreq>
      <priority>1.0</priority>
      {% if post.jpg %}
        <image:image>
          <image:loc>{{ post.jpg | absolute_url }}</image:loc>
          <image:title>{{ post.title }}</image:title>
          <image:caption>{{ post.alt }}</image:caption>
        </image:image>
      {% endif %}
      {% if post.webp %}
        <image:image>
          <image:loc>{{ post.webp | absolute_url }}</image:loc>
          <image:title>{{ post.title }}</image:title>
          <image:caption>{{ post.alt }}</image:caption>
        </image:image>
      {% endif %}
    </url>
  {% endfor %}
  
  {% for page in site.without-plugin %}
    <url>
      <loc>{{ page.url | absolute_url }}</loc>
      <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
      <changefreq>monthly</changefreq>
      <priority>1.0</priority>
      {% if page.jpg %}
        <image:image>
          <image:loc>{{ page.jpg | absolute_url }}</image:loc>
          <image:title>{{ page.title }}</image:title>
          <image:caption>{{ page.alt }}</image:caption>
        </image:image>
      {% endif %}
      {% if page.webp %}
        <image:image>
          <image:loc>{{ page.webp | absolute_url }}</image:loc>
          <image:title>{{ page.title }}</image:title>
          <image:caption>{{ page.alt }}</image:caption>
        </image:image>
      {% endif %}
    </url>
  {% endfor %}
</urlset>